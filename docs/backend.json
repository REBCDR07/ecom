
{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "enum": ["buyer", "seller", "admin"],
          "description": "The user's role."
        }
      },
      "required": ["uid", "email", "role"]
    },
    "SellerProfile": {
        "title": "Seller Profile",
        "description": "Profile information for a seller.",
        "type": "object",
        "properties": {
            "companyName": { "type": "string" },
            "phone": { "type": "string" },
            "whatsapp": { "type": "string" },
            "address": { "type": "string" },
            "bannerPicture": { "type": "string", "format": "uri" },
            "activity": { "type": "string" },
            "whyPlatform": { "type": "string" }
        },
        "required": ["companyName", "phone", "address", "activity"]
    },
    "Product": {
        "title": "Product",
        "description": "A product sold by a seller.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" },
            "price": { "type": "number" },
            "promotionalPrice": { "type": "number" },
            "image": { "type": "string", "format": "uri" },
            "imageHint": { "type": "string" },
            "sellerId": { "type": "string" },
            "sellerName": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["name", "price", "image", "sellerId", "sellerName", "createdAt"]
    },
    "Order": {
        "title": "Order",
        "description": "An order placed by a buyer.",
        "type": "object",
        "properties": {
            "productId": { "type": "string" },
            "productName": { "type": "string" },
            "productImage": { "type": "string", "format": "uri" },
            "price": { "type": "number" },
            "quantity": { "type": "number" },
            "sellerId": { "type": "string" },
            "buyerId": { "type": "string" },
            "buyerInfo": {
                "type": "object",
                "properties": {
                    "firstName": { "type": "string" },
                    "lastName": { "type": "string" },
                    "email": { "type": "string" },
                    "phone": { "type": "string" },
                    "address": { "type": "string" }
                }
            },
            "orderDate": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": ["pending", "shipped", "delivered"] }
        },
        "required": ["productId", "price", "quantity", "sellerId", "buyerId", "orderDate", "status"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
        "schema": { "$ref": "#/entities/User" },
        "description": "Stores basic user information and role."
    },
    "/seller_profiles/{userId}": {
        "schema": { "$ref": "#/entities/SellerProfile" },
        "description": "Stores detailed profile for sellers."
    },
    "/seller_applications/{appId}": {
        "schema": { "$ref": "#/entities/SellerProfile" },
        "description": "Stores applications from users wanting to become sellers."
    },
    "/products/{productId}": {
        "schema": { "$ref": "#/entities/Product" },
        "description": "Stores all products available on the platform."
    },
    "/orders/{orderId}": {
        "schema": { "$ref": "#/entities/Order" },
        "description": "Stores all orders made on the platform."
    }
  }
}
